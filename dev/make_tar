#!/bin/sh
set -e

# Create the tarball in a temporary directory
TMPFILE=$(mktemp)
trap 'rm -rf ${TMPFILE}' EXIT

tar --transform 's,^./,Dreamweaver/,' -czf "${TMPFILE}.tgz" --exclude=.git* --exclude=*.iso* --exclude=dreamweaver.tgz .

# Move the tarball to the current directory
mv -f "${TMPFILE}.tgz" ./dreamweaver.tgz
